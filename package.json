{
  "name": "bot-sambanet",
  "version": "1.0.0",
  "description": "Bot para automatizar açðes no lançamento de Notas Fiscais utilizando o software Samb@net",
  "main": "src/app.ts",
  "license": "MIT",
  "scripts": {
    "start": "node dist/src/app.js",
    "dev": "ts-node-dev --respawn --transpile-only --clear --watch .ts,.js,.json,.pug src/app.ts",
    "build": "tsc --build",
    "test": "jest --maxWorkers=50%",
    "test:watch": "jest --watch --maxWorkers=25%",
    "test:ci": "jest --runInBand --passWithNoTests",
    "lint": "eslint src --max-warnings=0",
    "prepare": "husky install",
    "tailwind:css": "npx tailwindcss -i public/styles/tailwind.css -o public/styles/main.css --watch"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dayjs": "^1.11.11",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "module-alias": "^2.2.3",
    "mongodb": "^6.5.0",
    "pug": "^3.0.2",
    "puppeteer": "^22.4.1",
    "socket.io": "^4.7.4",
    "winston": "^3.12.0"
  },
  "devDependencies": {
    "@prettier/plugin-pug": "^3.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^5.0.6",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "tailwind-scrollbar": "^3.1.0",
    "tailwindcss": "^3.4.3",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}